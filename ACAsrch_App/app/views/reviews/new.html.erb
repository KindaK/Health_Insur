
<div class="jumbotron">
<h1>Share Your Experience</h1>
<h2>Review a Health Insurance Company</h2>

<h2>Only submit reviews for health insurance companies with which you have direct experience.</h2>

<% if user_signed_in? %>
	<%= form_for @review do |f| %>
	<% if @review.errors.any? %>
		<% @review.errors.full_messages.each do |msg| %>
			<p><%= msg %></p>
		<% end %>
	<% end %>
	<p>
	<%= f.label :company %><br>
	<%= f.text_field :company, required: true %>
	</p>
	<p>
	<%= f.label :membership_yr %><br>
	<%= f.select :membership_yr, ['2013', '2014', '2015'], :prompt => 'Select One' %>
	</p>
	<p>
	<%= f.label :state %><br>
	<%= f.text_field :state, required: true %>
	</p>
	<p>
	<%= f.label :coverage %><br>
	<%= f.select :coverage, ['Bronze', 'Gold', 'Platinum', 'Silver'], :prompt => 'Select One' %>
	</p>
	<p>
	<%= f.label :statement %> <br>
	<%= f.text_area :statement %><br>
	</p>
	<button type="botton" class="btn btn-primary"><%= f.submit %></button>
	<% end %>
<% else %>
	<p>Please sign in to submit a review.</p>	
<% end %>	

</div>

<ul class="nav nav-tabs">
	<li><%= link_to 'ACA Search Home', root_path %></li> <li><%= link_to 'Search Again', new_search_path %></li>
</ul>
</div>
