
<h1><%= link_to 'ACA Search', root_path %></h1>

<div class="jumbotron">

<h2>Enter health insurance requirements to find ACA approved insurance options.</h2>

<%= form_tag searches_result_path, method: :get do %>

<p>
	<%= label_tag :state %><br>
	<%= select_tag :state, options_for_select([["Alabama", "AL"], ["Alaska", "AK"], ["Arizona", "AZ"],["Arkansas", "AR"], ["Delaware", "DE"], ["Florida", "FL"], ["Georgia", "GA"], ["Illinois", "IL"], ["Indiana", "IN"], ["Iowa", "IA"], ["Kansas", "KS"], ["Louisiana", "LA"], ["Maine", "ME"], ["Michigan", "MI"], ["Mississippi", "MS"], ["Missouri", "MO"], ["Montana", "MT"], ["Nebraska", "NE"], ["New Hampshire", "NH"], ["New Jersey", "NJ"], ["North Carolina", "NC"], ["North Dakota", "ND"], ["Ohio", "OH"], ["Oklahoma", "OK"],  ["Pennsylvania", "PA"], ["South Carolina", "SC"], ["South Dakota", "SD"], ["Tenessee", "TN"], ["Texas", "TX"], ["Utah", "UT"],  ["Virginia", "VA"], ["West Virginia", "WV"], ["Wisconsin", "WI"], ["Wyoming", "WY"]]), :prompt => 'Select One', required: true%>
</p>
<p>
	<%= label_tag :county %><br>
	<%= text_field_tag :county, nil, required: true %>
</p>
<p>
	<%= label_tag :coverage %><br>
	<%= select_tag :metal_level, options_for_select(['Bronze', 'Gold', 'Platinum', 'Silver']), :prompt => 'Select One', required: true %>
</p>

	<%= submit_tag "  SEARCH  " %>
	<% end %>

</div>